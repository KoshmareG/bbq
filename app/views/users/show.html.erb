<div class="text-center">
  <h1><%= @user.name %></h1>
  <div class="row justify-content-center">
    <div class="col-lg-2 col-md-4 col-6">
      <%= image_tag user_avatar(@user), class: 'img-fluid rounded-circle' %>
    </div>
  </div>
  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to 'Изменить профиль', edit_user_path(@user), class: 'btn btn-primary' %>
    </p>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>
