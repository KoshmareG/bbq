<%= form_with model: user do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :avatar, class: 'form-label' %>
    <div class="card">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-auto">
            <p class="mb-0"><%= image_tag(user_avatar_thumb(user), class: 'img-icon') if @user.avatar? %></p>
          </div>
          <div class="col">
            <%= form.file_field :avatar, class: 'form-control form-control-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="d-grid gap-2">
      <%= form.submit t('global.save'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
