<%= form_with model: user do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :avatar, class: 'form-label' %>
    <p><%= image_tag(@user.avatar.thumb.url, class: 'img-icon') if @user.avatar? %></p>
    <%= form.file_field :avatar, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <div class="d-grid gap-2">
      <%= form.submit t('global.save'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
