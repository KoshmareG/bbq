<span class="subscription">
  <% if subscription.user.present? %>
    <%= render partial: 'users/user', object: subscription.user %>
  <% else %>
    <em><%= subscription.user_name %></em>
  <% end %>
  <% if current_user_can_edit?(subscription) %>
    <%= button_to fa_icon('times'), event_subscription_path(subscription.event, subscription), method: :delete, class: 'tr-btn' %>
  <% end %>
</span>
