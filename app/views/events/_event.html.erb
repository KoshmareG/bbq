<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>
    <div class="thumbnail-inner event-info-inner event-info-full">
      <div class="event-description">
        <h3><%= link_to event.title, event_path(event), data: {turbo: false} %></h3>
        <h4>
          <small><%= l event.datetime, format: :long %></small>
        </h4>
        <div class="mb-3"><%= event.address %></div>
      </div>
      <div>
        <% event.visitors.each do |user| %>
          <%= image_tag user_avatar_thumb(user), class: 'img-icon img-icon-small', title: user.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>
